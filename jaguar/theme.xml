<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="startSet" extra="static"></image>
	</view>

	<view name="basic, detailed">
		<textlist name="gamelist">
			<selectorColor>F50005</selectorColor>
			<selectedColor>ffffff</selectedColor>
		</textlist>
	</view>

	<view name="grid">
		<image name="gridtile.favorite">
			<color>F50005ff</color>
		</image>  
	</view>

	<customView name="Tiles" inherits="grid">
		<gridtile name="selected">
			<backgroundEdgeColor>F50005</backgroundEdgeColor>
		</gridtile>
	</customView>

</theme>
