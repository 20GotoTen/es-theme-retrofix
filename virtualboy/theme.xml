<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
<include>./../_inc/system/hidenames.xml</include>

  <view name="system">
    <image name="startSet" extra="static"></image>

<video name="backgroundvideo" extra="true">
			<path>{random}</path>
			<pos>0.229166666666667 0</pos>
			<origin>0 0</origin>
			<maxSize>0.96 3</maxSize>
			<delay>2</delay>
			<effect>none</effect>
			<zIndex>11</zIndex>
		</video>
  </view>

  <view name="detailed">
   <textlist name="gamelist">
    <selectorColor>E60012</selectorColor>
    <selectedColor>ffffff</selectedColor>
  </textlist>
</view>

<customView name="Tiles" inherits="grid">
  <gridtile name="selected">
    <backgroundEdgeColor>E60012</backgroundEdgeColor>
  </gridtile>
</customView>

<view name="grid">
  <image name="gridtile.favorite">
    <color>E60012ff</color>
  </image>  
</view>

</theme>