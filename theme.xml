		<subset.mainVideoDelay>Main menu video delay</subset.mainVideoDelay>
		<subset.systemVideoDelay>System views video delay</subset.systemVideoDelay>
		<subset.animations>Animations</subset.animations>
		<subset.primaryButton>Primary button graphic</subset.primaryButton>
		<subset.secondaryButton>Secondary button graphic</subset.secondaryButton>
		<subset.artworkregion>System logos</subset.artworkregion>
		<subset.buttonSet>Button Set</subset.buttonSet>
		<subset.hideLogo>Batocera logo</subset.hideLogo>
		<subset.scanlines>Scanlines on System Views</subset.scanlines>
		<subset.scanlinesMain>Scanlines on Main Menu</subset.scanlinesMain>
		<subset.menuFanArt>Show fan art on Main Menu</subset.menuFanArt>
	</variables>


	<subset name="mainVideoDelay" displayName="${subset.mainVideoDelay}">
		<include name="2 Seconds"/>
		<include name="5 Seconds"/>
		<include name="Video off"/>
	</subset>

	<subset name="systemVideoDelay" displayName="${subset.systemVideoDelay}">
		<include name="2 Seconds"/>
