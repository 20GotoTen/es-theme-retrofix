<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
  <view name="system">
   <image name="startSet" extra="static"></image>
 </view>

 <view name="basic, detailed">
  <textlist name="gamelist">
   <selectorColor>0064C8</selectorColor>
   <selectedColor>ffffff</selectedColor>
 </textlist>
</view>

<view name="grid">
  <image name="gridtile.favorite">
    <color>0064C8ff</color>
  </image>  
</view>

<customView name="Tiles" inherits="grid" displayName="${tilesViewName}">
  <gridtile name="selected">
    <backgroundEdgeColor>0064C8</backgroundEdgeColor>
  </gridtile>
</customView>

</theme>