<!-- animation routine -->

<theme>
	<formatVersion>7</formatVersion>


<view name="system">
		
		<image name="mainlogo" extra="static">
 			<storyboard>
        		<animation property="x" from="0.27125" begin="300" duration="500" mode="easeOut"/>
        		<animation property="opacity" from="0" to="0" duration="300" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="300" mode="easeOut"/>
			</storyboard>
		</image>


	</view>



<customView name="Tiles" inherits="grid">



<image name="logo2" extra="true">
			 <storyboard>
			 	<animation property="x" from="0.042083333333333" begin="300" duration="500" mode="easeOut"/>
        		<animation property="opacity" from="0" to="0" duration="300" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="300" mode="easeOut"/>
        		</storyboard>
		</image>




<image name="btnSet" extra="true">


<storyboard>
			 	<animation property="y" from="0.396481481481481" begin="300" duration="500" mode="easeOut"/>
        		<animation property="opacity" from="0" to="0" duration="300" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="300" mode="easeOut"/>
        		</storyboard>


			<!--<pos>0.052083333333333 0.356481481481481</pos>-->

		</image>




<imagegrid name="gamegrid">
	<storyboard>		

        		<animation property="opacity" from="0" to="1" duration="800" mode="easeOut"/>
        		<animation property="y" from="0.657037037037037" duration="800" mode="easeOut"/>
        		</storyboard>


			<!-- <pos>0.052083333333333 0.537037037037037</pos>-->
		</imagegrid>




		<image name="grid_help" extra="true">
		
<storyboard>		

        		<animation property="opacity" from="0" to="1" duration="800" mode="easeOut"/>
        		<animation property="y" from="1" duration="800" mode="easeOut"/>
        		</storyboard>


		
		</image>






<image name="md_marquee">
	<storyboard>
        		<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
        		<animation property="opacity" from="0" to="1" begin="500"  duration="600" mode="easeOut"/>
			</storyboard>
</image>


<text name="md_description">
	<storyboard>
        		<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
        		<animation property="opacity" from="0" to="1" begin="500" duration="600" mode="easeOut"/>
			</storyboard>
</text>


	<image name="game-meta" extra="true">
 <storyboard>
        		<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="600" mode="easeOut"/>
			</storyboard>
		</image>


<text name="md_genre, md_players, md_publisher">
	<storyboard>
        		<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="600" mode="easeOut"/>
			</storyboard>
</text>


<datetime name="md_releasedate">
	<storyboard>
        		<animation property="opacity" from="0" to="0" duration="1" mode="linear"/>
        		<animation property="opacity" from="0" to="1" duration="500" begin="600" mode="easeOut"/>
			</storyboard>
</datetime>


</customView>







</theme>