<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="startSet" extra="static"></image>
	</view>

	<view name="basic, detailed">
		<textlist name="gamelist">
			<selectorColor>800080</selectorColor>
			<selectedColor>ffffff</selectedColor>
		</textlist>
	</view>

	<view name="grid">
		<image name="gridtile.favorite">
			<color>800080ff</color>
		</image>  
	</view>

	<customView name="Tiles" inherits="grid">
		<gridtile name="selected">
			<backgroundEdgeColor>800080</backgroundEdgeColor>
		</gridtile>
	</customView>

</theme>