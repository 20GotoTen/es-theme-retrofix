  </view>


  <view name="basic, detailed">
    <textlist name="gamelist">
     <selectorColor>4B4793</selectorColor>
     <selectedColor>ffffff</selectedColor>
   </textlist>
 </view>


 <customView name="Boxes" inherits="grid">
  <imagegrid name="gamegrid">
    <autoLayout>7 1</autoLayout>
    <pos>-0.13 0.174</pos>
    <size>1.26 0.65</size>
    <autoLayoutSelectedZoom>1.45</autoLayoutSelectedZoom>
  </imagegrid>
  <text name="md_name">
    <pos>0.5 0.231481481481481</pos>
  </text>

</customView>


<customView name="Tiles" inherits="grid">
  <gridtile name="default">
    <backgroundCenterColor>40404080</backgroundCenterColor>
    <backgroundEdgeColor>00000000</backgroundEdgeColor>
    <padding>4 4</padding>
    <imageSizeMode>minSize</imageSizeMode>
    <backgroundCornerSize>0 0</backgroundCornerSize>
    <backgroundColor>42424200</backgroundColor>
    <imageColor>657A00FF</imageColor>
  </gridtile>

  <gridtile name="selected">
    <padding>4 4</padding>
    <imageColor>94B300ff</imageColor>
    <backgroundCornerSize>0</backgroundCornerSize>
    <backgroundEdgeColor>4B4793</backgroundEdgeColor>
  </gridtile>

  <video name="md_video">
   <color>94B300ff</color>
   <showSnapshotDelay>false</showSnapshotDelay>
   <delay>0</delay>
 </video>
</customView>

<view name="grid">
  <image name="gridtile.favorite">
    <color>4B4793ff</color>
  </image>  
</view>

</theme>