<theme>
	<formatVersion>7</formatVersion>
	<include>./../theme.xml</include>
<include>./../_inc/system/hidenames.xml</include>


  <view name="detailed">

    <textlist name="gamelist">
     <selectorColor>EB222C</selectorColor>
     <selectedColor>ffffff</selectedColor>
   </textlist>

 <textlist ifSubset="artworkregion:US" name="gamelist">
     <selectorColor>F79226</selectorColor>
     <selectedColor>000000</selectedColor>
   </textlist>
 </view>



 <customView name="Boxes" inherits="grid">
   <imagegrid name="gamegrid">
     <autoLayout>7 1</autoLayout>
     <pos>-0.13 0.144</pos>
     <size>1.26 0.65</size>
     <autoLayoutSelectedZoom>1.45</autoLayoutSelectedZoom>
   </imagegrid>


   <!-- THIS IS A TITLE POSITION OVERRIDE FOR THIS THEME ONLY -->
   <text name="md_name">
    <pos>0.5 0.751481481481481</pos>
  </text>


</customView>


<view name="grid">
  <image name="gridtile.favorite">
    <color>EB222Cff</color>
  </image>  

  <image ifSubset="artworkregion:US" name="gridtile.favorite">
    <color>F79226ff</color>
  </image>  






</view>


<customView name="Tiles" inherits="grid">
  <gridtile name="selected">
    <backgroundEdgeColor>EB222C</backgroundEdgeColor>
  </gridtile>

<gridtile ifSubset="artworkregion:US" name="selected">
    <backgroundEdgeColor>F79226</backgroundEdgeColor>
  </gridtile>
</customView>

</theme>